        function fnUpdateWorklog(_id) {
            flag_themsua = 1; // Update
            window.location.href = "#summary";
            $('#txtTitle').html("Update Worklog");

            document.getElementById('divTitle').style.color = "Red";
            document.getElementById('divBody').style.backgroundColor = "#f7ece8";
            document.getElementById('divFooter').style.backgroundColor = "#f7ece8";
            document.getElementById('btnSave').style.backgroundColor = "orange";
            document.getElementById('btnSave').style.borderColor = "#f59907";

            $.ajax({
                url: "/Home/LoadWorklog/",
                data: {
                    ID: _id
                },
                type: "POST",
                dataType: "json",

                success: function (response) {
                    if (response != '') {
                        $('#ID').val(response.ID);
                        $('#Title').val(response.Title);

                        $('#HourWork').val(response.HourWork);
                        $('#Description').val(response.Description);

                        if (response.TaskID != null && response.TaskID.trim() != "") {
                            $('#lstTask').val(response.TaskID).trigger('change');
                        }
                        else {
                            $('#lstTask').val("-1").trigger('change');
                        };

                        if (response.Date != null) {
                            const d = new Date(response.Date.match(/\d+/)[0] * 1);
                            const formattedDate = d.getFullYear() + '-' + ("0" + (d.getMonth() + 1)).slice(-2) + '-' + ("0" + d.getDate()).slice(-2);
                            $('#Date').val(formattedDate);
                        }
                        else {
                            $('#Date').val('');
                        }

                        if (response.FinishTask != null) {
                            $('#FinishTask').prop("checked", response.FinishTask)
                        }
                        else {
                            $('#FinishTask').prop("checked", false)
                        }
                    };
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    // alert(xhr.status);
                    alert("Có lỗi trong quá trình load thông tin Worklog. Vui lòng kiểm tra lại!");
                }
            });
        };

        function fnDeleteWorklog(_id) {
            const response = confirm("Bạn có chắc là muốn xóa worklog này không?");

            if (response) {
                $.ajax({
                    url: "/Home/DeleteWorklog/",
                    data: {
                        ID: _id
                    },
                    type: "POST",
                    dataType: "json",

                    success: function (response) {
                        if (response != '') {
                            alert(response);
                            window.location.href = "/Home/Worklog/";
                        };
                    },
                    error: function (xhr, ajaxOptions, thrownError) {
                        // alert(xhr.status);
                        alert("Đã có lỗi. Vui lòng kiểm tra lại!");
                    }
                });
            } else {
                return false;
            }
        };
    </script>
