    <script>
        var flag_themsua = 0;
        $(document).ready(function () {

            flag_themsua = 0; // Default: Insert
            $('.select2').select2();
            $('#tblWorklog').DataTable();

            $.ajax({
                url: "/Home/LoadAllTask",
                type: "POST",
                dataType: "json",
                success: function (response) {
                    if (response != '') {
                        for (i in response) {
                            $("#lstTask").append("<option value='" + response[i].ID + "'>" + response[i].TaskName + "</option>");
                        }
                        $("#lstTask").val('-1').trigger('change');
                    };
                },
            });

            $('#btnSave').off('click').on('click', function () {
                this.disabled = true;

                $('#Title').removeClass('myborderError');
                $('#Date').removeClass('myborderError');
                $('#lstTask').removeClass('myborderError');
                $('#HourWork').removeClass('myborderError');
                $('#Description').removeClass('myborderError');
                $('.select2-selection--single').removeClass('myborderError');

                var form1 = $('#frmInsertWorklog');
                var token1 = $('input[name="__RequestVerificationToken"]', form1).val();

                var ID = $('#ID').val();
                var Title = $('#Title').val();
                var Date = $('#Date').val();
                var TaskID = $('#lstTask').val();
                var HourWork = $('#HourWork').val();
                var Description = $('#Description').val();
                var FinishTask = document.getElementById("FinishTask").checked;

                if (flag_themsua == 1 && (ID == null || ID.trim() == "")) // Update
                {
                    alert("Không xác định được đối tượng cần sửa dữ liệu! Vui lòng refesh lại trang web.");
                    document.getElementById('btnSave').disabled = false;
                }
                else if (
                    (Title.trim() == "") || (Date == null || Date.trim() == "") || (TaskID == null || TaskID.trim() == "-1")
                    || (HourWork == null || HourWork.trim() == "")
                ) {
                    alert("Vui lòng điền đầy đủ thông tin với các trường dữ liệu được dánh dấu (*)");
                    document.getElementById('btnSave').disabled = false;

                    if (Title.trim() == "") {
                        $('#Title').addClass('myborderError');
                    }
                    if (Date.trim() == "") {
                        $('#Date').addClass('myborderError');
                    }
                    if (TaskID == null || TaskID.trim() == "-1") {
                        $('.select2-selection--single').addClass('myborderError');
                    }
                    if (HourWork == null || HourWork.trim() == "") {
                        $('#HourWork').addClass('myborderError');
                    }
                }
                else {
                    $.ajax({
                        type: "POST",
                        url: "/Home/WorklogUpdate/",
                        data: {
                            __RequestVerificationToken: token1,
                            FLAG: flag_themsua,
                            ID: ID,
                            Title: Title,
                            Date: Date,
                            TaskID: TaskID,
                            HourWork: HourWork,
                            Description: Description,
                            FinishTask: FinishTask
                        },
                        //contentType: "application/json; charset=utf-8",
                        //dataType: "json",
                        success: function (response) {
                            if (response.STATUS == "true") {
                                alert(response.MESSAGE);
                                window.location.href = "/Home/Worklog/";
                            }
                            else if (response.STATUS == "false") {
                                alert(response.MESSAGE);
                            }
                            else {
                                alert("Có lỗi trong quá trình thêm dữ liệu. Vui lòng kiểm tra lại!");
                            }

                            //document.getElementById('btnSave').disabled = false;
                        },
                        error: function (xhr, status, error) {
                            var err = xhr.responseText;
                            alert(err);
                        }
                        //error: function (response) {
                        //    alert("Có lỗi trong quá trình thêm dữ liệu. Vui lòng kiểm tra lại!");
                        //    document.getElementById('btnInsertProject').disabled = false;
                        //}
                    });
                };
            });

            $('#btnReset').off('click').on('click', function () {
                window.location.href = "/Home/Worklog/";
            });

            $('#tblWorklog tbody').on('click', 'tr', function () {
                if ($(this).hasClass('selected')) {
                    $(this).removeClass('selected');
                } else {
                    $('#tblWorklog tr.selected').removeClass('selected');
                    $(this).addClass('selected');
                }
            });
        });

        function fnInsertWorklog() {
            flag_themsua = 0; // Insert
            window.location.href = "#summary";
            $('#txtTitle').html("Add new Worklog");

            document.getElementById('divTitle').style.color = "#0170f8";
