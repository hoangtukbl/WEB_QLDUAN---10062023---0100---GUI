                                                        </button>
                                                        <button onclick="fnDeleteUser('@p.ID');" class="btn btn-sm btn-warning" value="@p.ID" title="Delete User">
                                                            <i class="fa fa-minus"></i>
                                                        </button>
                                                    </td>
                                                    <td>@stt</td>
                                                    <td style="color:darkorange;">@p.ID</td>
                                                    <td>@p.FullName</td>

