                                                stt += 1;
                                                <tr>
                                                    <td style="min-width:80px;">
                                                        @*<button onclick="viewProfile(this);" class="btn btn-sm btn-default" value="@p.ID" title="View profile">
                                                                <i class="fa fa-eye"></i>
                                                            </button>*@
                                                        <button name="btnEdit" onclick="fnUpdateUser('@p.ID');" class="btn btn-sm btn-primary" value="@p.ID" title="Update User">
