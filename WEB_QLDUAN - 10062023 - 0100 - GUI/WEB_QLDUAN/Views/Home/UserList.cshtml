    <script type="text/javascript">
        var flag_themsua = 0;

        $(document).ready(function () {

            flag_themsua = 0;
            $('.select2').select2();
            $('#tblUser').DataTable();
            document.getElementById('ID').disabled = false;

            $.ajax({
                url: "/Home/LoadRoleListAjax/",
                type: "POST",
                dataType: "json",
                success: function (response) {
                    if (response != '') {
                        for (i in response) {
                            $("#lstRole").append("<option value='" + response[i].ID + "'>" + response[i].Name + "</option>");
                        }
                        $('#lstRole').val('-1').trigger('change');
                    };
                },
            });

            $('#btnSave').off('click').on('click', function () {
                this.disabled = true;
                $('#ID').removeClass('myborderError');
                $('#FullName').removeClass('myborderError');
                $('#Birthday').removeClass('myborderError');
                $('#Sex').removeClass('myborderError');
                $('#Address').removeClass('myborderError');
                $('#Phone').removeClass('myborderError');
                $('#Email').removeClass('myborderError');
                $('#Password').removeClass('myborderError');
                $('#Description').removeClass('myborderError');
                $('#lstRole').removeClass('myborderError');
                $('.select2-selection--single').removeClass('myborderError');

                var form1 = $('#frmInsertUser');
                var token1 = $('input[name="__RequestVerificationToken"]', form1).val();

                var ID = $('#ID').val();
                var FullName = $('#FullName').val();
                var Birthday = $('#Birthday').val();
                var Sex = $('#Sex').val();
                var Address = $('#Address').val();
                var Phone = $('#Phone').val();
                var Email = $('#Email').val();
                var Password = $('#Password').val();
                var RoleID = $('#lstRole').val();
                var Description = $('#Description').val();

                if (flag_themsua == 0 && (ID == null || ID.trim() == "")) // Insert
                {
                    alert("Vui lòng nhập User ID!");
                    $('#ID').addClass('myborderError');
                    document.getElementById('btnSave').disabled = false;
                    $('#ID').focus();
                }
                else if (flag_themsua == 1 && (ID == null || ID.trim() == "")) // Update
                {
                    alert("Không xác định được đối tượng cần sửa dữ liệu! Vui lòng refesh lại trang web.");
                    $('#ID').addClass('myborderError');
                    document.getElementById('btnSave').disabled = false;
                }
                else if (
                    (FullName.trim() == "") || (Password.trim() == "") || (RoleID == null || RoleID.trim() == "")
                ) {
                    alert("Vui lòng điền đầy đủ thông tin với các trường dữ liệu được dánh dấu (*)");
                    document.getElementById('btnSave').disabled = false;

                    if (ID == null || ID.trim() == "") {
                        $('#ID').addClass('myborderError');
                    }
                    if (FullName.trim() == "") {
                        $('#FullName').addClass('myborderError');
                    }
                    if (Password.trim() == "") {
